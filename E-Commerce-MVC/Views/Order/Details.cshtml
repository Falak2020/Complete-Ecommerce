@model E_Commerce_MVC.Models.User.MyOrder

@{
    ViewData["Title"] = "Details";
}



<div class="container mt-5">

    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OurReference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OurReference)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryTypeName)

        </dd>

        <h1 class="mt-5">Order Items</h1>
        <hr />
        @if (Model.OrderItems != null)
        {
            @foreach (var item in Model.OrderItems)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.product.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.product.Name)

                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Quantity)

                </dd>
            }
        }

    </dl>

    <div>
       
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>

</div>
