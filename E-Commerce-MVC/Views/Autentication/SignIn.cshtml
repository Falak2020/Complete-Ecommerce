@model E_Commerce_MVC.Models.User.LogIn

@{
    ViewData["Title"] = "SignIn";
}

@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<div class="row d-flex justify-content-center mt-5">

    <div class="col-md-4 border p-5 bg-white shadow-lg mt-5">
        <h1 class="text-center py-5 text-style text-primary"> SIGN IN </h1>
        <form asp-controller="Autentication" asp-action="SignIn" asp-route-returnurl = "@returnUrl" method = "post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label fw-bold"></label><i class="text-danger fas fa-star"></i>
                <input asp-for="Email" class="form-control mt-2" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <label asp-for="password" class="control-label fw-bold"></label><i class="text-danger fas fa-star"></i>
                <input asp-for="password" class="form-control mt-2" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group mt-5 ">
                <input type="submit" value="Sign in" class="btn btn-primary form-control" />
            </div>

            @if (ViewData["error"] != null)
            {
                <p class="text-danger"> @ViewData["error"]</p>
            }

            <div class="text-center py-3"> New User <a class=" text-primary text-decoration-none" asp-controller="Autentication" asp-action="SignUp"> Register here </a></div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}