@model E_Commerce_MVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-center align-items-center h-100">
    <div>
        <h5 class="my-5">Product <i class="fas fa-chevron-right"> </i> @Html.DisplayFor(model => model.SubCategory.Category.Name)<i class="fas fa-chevron-right"></i>@Html.DisplayFor(model => model.SubCategory.Name)</h5>

        <div class="card mb-3 p-5">
            <div class="row g-0">
                <div class="col-md-6">
                    <img src="@Html.DisplayFor(model => model.ImageURL)" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h1 class="card-title "> @Html.DisplayFor(model => model.Name)</h1>
                        <p class="card-text ms-3 mt-5">@Html.DisplayFor(model => model.Description)</p>
                        <div class=" d-flex justify-content-between align-items-center mt-5">
                            <h3 class="card-text"><small class="text-danger ms-3">Price : @Html.DisplayFor(model => model.Price)</small></h3>
                            <div class="text-end">
                                @if (Model.InStock)
                                {

                                    using (Html.BeginForm("AddToCart", "ShoppingCart", new {@id = Model.Id}, FormMethod.Post))
                                    {
                                        <button class=" btn cart-btn btn-outline-success" type="submit"><i class="fas fa-shopping-cart me-1"></i>Köp</button>
                                    }

                                }
                                else
                                {
                                    <a class=" btn cart-btn btn-outline-success disabled"><i class="fas fa-shopping-cart me-1"></i>Köp</a>
                                }

                            </div>
                        </div>
                        <div class="me-3 mt-5">
                            @if (Model.InStock)
                            {
                                <p class="text-muted"><i class="fas fa-box text-success me-2"></i> I lager</p>
                                <p class="text-success">Skickas idag</p>
                            }
                            else
                            {
                                <small class="text-danger"><i class="fas fa-box text-muted me-2"></i> Slutsåld</small>
                                <p>Varan finns inte längre i lager och du kan inte lägga till varan i din kundvagn</p>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>